entrypoint = "index.html"
modules = ["web"]

[nix]
channel = "stable-24_11"
packages = ["python3"]

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "python3 server.py"]

[workflows]
runButton = "Run Server"

[[workflows.workflow]]
name = "Run Server"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 server.py"
waitForPort = 8080

[[ports]]
localPort = 80
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080
